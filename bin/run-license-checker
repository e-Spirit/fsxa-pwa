#!/bin/sh

# Fail on empty licenses
NODE_OPTIONS=--unhandled-rejections=strict \
  license-checker \
  --excludePackages "fsxa-api;fsxa-pattern-library;fsxa-nuxt-module;fsxa-ui" \
  --json \
  --excludePrivatePackages \
  --production \
  --failOn "; ;" \
  --uknown \
  -- out license-checker.json \
  $@
